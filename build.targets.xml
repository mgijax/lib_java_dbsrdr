  <target name="gen.code" description="Generates schema specific source code">
    <java classname="org.jax.mgi.shr.dbutils.cg.RADARGen"
	  classpath="${classpath}"
	  fork="true" dir="${src.dir}">
	<jvmarg value="-DDBNAME=${dbname}"/>
	<jvmarg value="-DDBSERVER=${dbserver}"/>
	<jvmarg value="-DDBUSER=${dbuser}"/>
	<jvmarg value="-DDBPASSWORDFILE=${dbpasswordfile}"/>
        <jvmarg value="-DDBURL=${dburl}"/>
    </java>
  </target>

  <target name="clean.code" description="Removed code generated sourec files">
    <delete>
      <fileset dir="${src.dir}/org/jax/mgi/dbs/rdr/dao" includes="*.java"/>
    </delete>
  </target>

  <target name="buildall" description="Executes task 'gen.code' and 'all'"
	  depends="gen.code, all">
  </target>
