<?xml version="1.0"?>
<!-- This XML script is used to build the lib_java_dbsrdr product.
-->
<project name="lib_java_dbsrdr" default="compile" basedir=".">

   <!-- Get the system environment variables and define any other system
        properties needed by the build.
   -->
   <property environment="env"/>
   <property name="jar.name" value="dbsrdr"/>
   <property name="classpath" value="${env.MGI_JAVALIB}/core.jar:${env.DBSGEN}/classes:${env.VELOCITY}:${env.JUNIT}:${env.JCONNECT}"/>

   <!-- Import the universal targets.
   -->
   <import file="${env.MGICONFIG}/etc/build.lib.targets.xml"/>

   <!-- Define product specific targets.
   -->
   <target name="gen.code" description="Generates schema specific source code">
      <java classname="org.jax.mgi.shr.dbutils.cg.RADARGen"
            classpath="${classpath}"
            fork="true" failonerror="true" dir="${src.dir}">
         <jvmarg value="-DDBSERVER=${env.RADAR_DBSERVER}"/>
         <jvmarg value="-DDBNAME=${env.RADAR_DBNAME}"/>
         <jvmarg value="-DDBUSER=${env.RADAR_DBUSER}"/>
         <jvmarg value="-DDBPASSWORDFILE=${env.RADAR_DBPASSWORDFILE}"/>
         <jvmarg value="-DDBURL=${env.RADAR_DBURL}"/>
      </java>
   </target>

   <target name="clean.code" description="Removes code generated source files">
      <delete>
         <fileset dir="${src.dir}/org/jax/mgi/dbs/rdr/dao" includes="*.java"/>
      </delete>
   </target>

   <target name="buildall" description="Performs main build tasks"
           depends="clean.code, gen.code, all, link">
   </target>
</project>
